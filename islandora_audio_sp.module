/**
 * Islandora audio solution pack module
 */

/**
 * Implements hook_fedora_repository_required_fedora_objects
 * @return array
 */
function islandora_audio_sp_fedora_repository_required_fedora_objects() {
  module_load_include('inc', 'fedora_repository', 'fedora_repository.solutionpacks');
  $module_path = drupal_get_path('module', 'islandora_audio_sp');
  $islandora_path = drupal_get_path('module', 'fedora_repository');
  $form_name = 'Islandora Audio MODS Form';
  $form_xml = file_get_contents("$module_path/xml/mods_audio.xml");
  solution_pack_add_form($form_name, $form_xml);
  solution_pack_add_form_association('islandora:sp-audioCModel', $form_name);

  return array(
    'islandora_audio_sp' => array(
      'module' => 'islandora_audio_sp',
      'title' => 'Islandora Audio Solution Pack',
      'objects' => array(
        array(
          'foxml_file' => "$module_path/xml/islandora_sp_audioCModel.xml",
          'pid' => 'islandora:sp-audioCModel',
          'dsid' => NULL,
          'datastream_file' => NULL,
          'dsversion' => NULL,
        ),
        array(
          'pid' => 'islandora:audio_collection',
          'label' => 'Audio Collection',
          'cmodel' => 'islandora:collectionCModel',
          'parent' => 'islandora:root',
          'datastreams' => array(
            array(
              'dsid' => 'COLLECTION_POLICY',
              'datastream_file' => "$module_path/xml/audio_collection_policy.xml",
            ),
            array(
              'dsid' => 'TN',
              'datastream_file' => "$module_path/images/Crystal_Clear_filesystem_folder_grey.png",
              'mimetype' => 'image/png',
            ),
          ),
        ),
      ),
    ),
  );
}

function islandora_audio_sp_form_fedora_repository_ingest_form_alter(&$form, &$form_state) {
  if ($form['content_model_pid']['#value'] == 'islandora:sp_videoCModel') {
    $form['upload'] = array(
      'upload' => array(
        '#weight' => -99,
        '#type' => 'yui_uploader',
        '#required' => TRUE, // If FALSE the user can submit the form without uploading any files, if true at least one file must be uploaded.
        '#width' => '100px', // The width of the upload button.
        '#height' => '40px', // The height of the rendered button
        '#extensions' => array('wav', 'flac', 'mp3'), // Limit uploads to matching file extensions. Examples array('jpg', 'xml')
        '#multiple_files' => FALSE, // Allow multiple files to selected at once
      ),
    );
    array_unshift($form['#validate'], 'manage_yui_uploads');
    if (!variable_get('audio_retain_original', TRUE)) {
      $form['#validate'][] = 'audio_remove_original';

    }
    $form['submit']['#value'] = t("Create Audio Object");
  }
}

function audio_remove_original($form, &$form_state) {
  $form_state['values']['ingest-file-location'] = NULL;
}

